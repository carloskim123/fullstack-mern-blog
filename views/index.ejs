<div class="author">
  <h1 class="author__heading">Hi, I'm Carlos.</h1>
  <p class="author__body">Web Developer and content creator.</p>
</div>


<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>

    <li>
      <a href="/post/<%= post._id  %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>

  <a href="#" class="pagination">&lt;</a>
</section>
